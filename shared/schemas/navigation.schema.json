{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NavigationSchema",
  "description": "Schema for validating navigation.yaml, allowing top-level URL or children.",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "title"],
    
    // ðŸš€ FIX 1: Enforce EITHER a 'url' (direct link) OR 'children' (dropdown)
    "oneOf": [
      { "required": ["url"] },
      { "required": ["children"] }
    ],

    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the menu section"
      },
      "title": {
        "type": "string",
        "description": "Top-level menu label"
      },
      "subtitle": {
        "type": "string",
        "description": "Optional subtitle for grouping"
      },
      "icon": {
        "type": "string",
        "description": "Optional emoji or icon string"
      },
      
      // ðŸš€ FIX 2: Allow 'url' property on the top-level object
      "url": { 
        "type": "string", 
        "description": "URL for a direct top-level navigation item" 
      },

      "children": {
        "type": "array",
        "description": "Sub-items for the mega-menu dropdown",
        "items": {
          "type": "object",
          "required": ["title", "url"],
          "properties": {
            "title": { "type": "string" },
            "url": { "type": "string", "description": "URL for the navigation item" },
            "icon": { "type": "string" }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false 
  }
}
