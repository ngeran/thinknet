# Dockerfile.fastapi
FROM python:3.11-slim
WORKDIR /app
# Updated path: Copy requirements.txt from the new 'fastapi' folder
COPY fastapi/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
# Updated path: Copy source files from the new 'fastapi' folder
COPY fastapi/. .
EXPOSE 8000
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
